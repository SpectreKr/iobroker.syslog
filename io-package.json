    "native": {
        "host":      "localhost",
        "port":      0,
        "user":      "",
        "password":  "",
        "dbname":    "rsyslog",
        "t_emerg":      true,
        "t_alert":      true,
        "t_critical":   true,
        "t_error":      true,
        "t_warn":       true,
        "t_notice":     false,
        "t_info":       false,
        "t_debug":      false,
        "keywords":  ""
    },
    "objects": [
        {
            "_id": "_design/custom",
            "language": "javascript",
            "views": {
                "state": {
                    "map": "function(doc) { if (doc.type==='state' && (doc.common.custom || doc.common.history)) emit(doc._id, doc.common.custom || doc.common.history) }"
                }
            }
        }
    ]
